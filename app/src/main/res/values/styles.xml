<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textColorSecondary">@android:color/secondary_text_light</item>
        <item name="android:textColorTertiary">@android:color/tertiary_text_light</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:alertDialogTheme">@style/PreferenceDialogTheme</item>
        <item name="android:actionMenuTextAppearance">@style/ToolBarStyle.MenuTextStyle</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>

    </style>

    <style name="RedTheme" parent="AppTheme">

        <item name="colorPrimary">@color/bgRecord</item>
        <item name="colorPrimaryDark">@color/bgRecordStatus</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Difference 21-->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert"></style>

    <style name="PreferenceDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!--Difference-->

    <style name="ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/colorActionMode</item>
    </style>

    <style name="ToolBarStyle.MenuTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
